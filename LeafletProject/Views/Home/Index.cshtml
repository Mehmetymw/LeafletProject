@using LeafletProject.Controllers;
@model USData 
<!DOCTYPE html>
<html>
<head>
    <title>Leaflet Harita Örneği</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" integrity="sha512-iecdLmaskl7CVkqkXNQ/ZH/XLlvWZOJyj7Yy7tcenmpD1ypASozpmT/E0iPtmFIB46ZmdtAc9eNBvH0H/ZpiBw==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/leaflet/1.7.1/leaflet.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/site.css" />
   
    <script src="https://code.jquery.com/jquery-3.7.0.min.js" integrity="sha256-2Pmvv0kuTBOenSvLm6bvfBSSHrUJ+3A7x6P5Ebd07/g=" crossorigin="anonymous"></script>
    <script src="https://code.jquery.com/ui/1.13.2/jquery-ui.min.js" integrity="sha256-lSjKY0/srUM9BE3dPm+c4fBo1dky2v27Gdjm2uoZaL0=" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/leaflet/1.7.1/leaflet.js"></script>
    <script src="~/lib/turfjs/turf.js"></script>
    
</head>
<body>
    <partial name="TopNavbar" />
    
   
    <div id="layer-panel">
        <div class="form-check">
            <input class="form-check-input" type="checkbox" value="" id="cbIl" checked>
            <label class="form-check-label" for="cbIl">
                İl Sınrı
            </label>
        </div>
        <div class="form-check">
            <input class="form-check-input" type="checkbox" value="" id="cbIlce">
            <label class="form-check-label" for="cbIlce">
                İlçe Sınrı
            </label>
        </div>
        <div class="form-check">
            <input class="form-check-input" type="checkbox" value="" id="cbKoy">
            <label class="form-check-label" for="cbKoy">
                Köy Sınrı
            </label>
        </div>
        <div class="form-check">
            <input class="form-check-input" type="checkbox" value="" id="cbMah">
            <label class="form-check-label" for="cbMah">
                Mahalle Sınırı
            </label>
        </div>
        <div class="form-check">
            <input class="form-check-input" type="checkbox" value="" id="cbUs">
            <label class="form-check-label" for="cbUs">
                US
            </label>
        </div>
    </div>

    <partial name="Properties" model="@Model"/>
    
        <div id="map">
        </div>
        <script src="~/js/site.js">
        </script>

</body>
</html>
